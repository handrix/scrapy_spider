# -*- coding: utf-8 -*-


from scrapy.item import Item, Field

class LagouItem(Item):
    # define the fields for your item here like:
    # name = scrapy.Field()

    postSource = Field()     # 信息来源
    sourceUrl = Field()      # 来源url
    postTime = Field()       # 发布时间
    title = Field()          # 标题

    locality = Field()      # 工作地点
    company = Field()       # 公司
    position = Field()      # 职位
    department = Field()
    description = Field()   # 描述
    salary = Field()        # 待遇
    education = Field()     # 学历要求
    experience = Field()    #经验
    fulltime = Field()      # 全职/实习
    companyspace = Field()  #公司领域

#   advantage = Field()

